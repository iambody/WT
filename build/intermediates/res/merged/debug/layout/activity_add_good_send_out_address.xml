<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    
    <include layout="@layout/titlebar"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
       
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >
    
    <include
        android:id="@+id/send_out_address"
         layout="@layout/commentview_txtarrow"/>
    
     <EditText  
        android:id="@+id/et_enter_send_out_detail_address"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:hint="@string/enter_detail_address"
        android:padding="3dp"
        android:gravity="left"
        android:background="@drawable/shape_add_goods_edit_bg"
        />
     
     </LinearLayout>
     
    <TextView 
        android:id="@+id/tv_save_send_out_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/save_send_out_address"
        style="@style/build_two_dimension_code_btn_style_no_circular"
        
        />
     
     
    

</LinearLayout>
