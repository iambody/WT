<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_bg"
    android:orientation="horizontal"
    android:paddingLeft="10dp"

    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_order_manage_order_detail_good_icon"
            android:layout_width="@dimen/item_shop_purchase_height"
            android:layout_height="@dimen/item_shop_purchase_height"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/order_detail_listview_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_order_manage_order_detail_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopbus_item_log3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_order_manage_order_detail_good_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nullstr"
                android:textColor="@color/grey"
                android:textSize="@dimen/order_detail_goods_total_price_size" />

            <TextView
                android:id="@+id/tv_order_manage_order_detail_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/app_fen"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_manage_order_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_manage_good_order_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格："
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />

            <TextView
                android:id="@+id/tv_order_manage_order_detail_content_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />

            <TextView
                android:id="@+id/tv_order_manage_order_detail_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>