<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/insulate_view_height"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_real_auth_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/center_set_real_auth_succeed_padding"
            android:text="姓名:"
            android:textColor="@color/grey"
            android:textSize="@dimen/comment_label_txtsize" />

        <View style="@style/line_left" />

        <TextView
            android:id="@+id/tv_real_auth_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/center_set_real_auth_succeed_padding"
            android:text="身份证号："
            android:textColor="@color/grey"
            android:textSize="@dimen/comment_label_txtsize" />
    </LinearLayout>

</LinearLayout>