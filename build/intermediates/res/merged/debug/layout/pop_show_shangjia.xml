<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conten_show_shangjia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8c000000"
    android:paddingLeft="10dp"
    android:orientation="vertical"
    android:paddingRight="10dp" >

    <LinearLayout
        android:id="@+id/conten_show_shangjia_nei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_pop_gridview_txt_normal_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/pop_show_shangjia_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/cha_iv" />
        <!-- 上边图片+价格 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cha_iv"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="@dimen/brand_detail_brand_iv"
                android:layout_height="@dimen/brand_detail_brand_iv"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/pop_show_shangjia_myprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/nullstr"
                    android:textColor="@color/app_fen"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pop_show_shangjia_kucun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="6dp"
                    android:text="@string/nullstr"
                    android:textColor="@color/app_gray" />
            </RelativeLayout>
        </LinearLayout>
        <!-- 上边图片+价格 ********* -->

        <LinearLayout style="@style/line_left_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cha_iv"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/pop_show_shangjia_guige1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/guige"
                android:textColor="@color/app_gray" />

            <io.vtown.WeiTangApp.comment.view.custom.CompleteGridView
                android:id="@+id/pop_show_shangjia_guige_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@color/transparent"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout style="@style/line_left_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cha_iv"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/pop_show_shangjia_guige2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/guige"
                android:textColor="@color/app_gray" />

            <io.vtown.WeiTangApp.comment.view.custom.CompleteGridView
                android:id="@+id/pop_show_shangjia_guige_grid_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:listSelector="@color/transparent"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout style="@style/line_left_right" />
        <!-- 建议零售价 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cha_iv"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/jianyilingshou"
                android:textColor="@color/app_gray" />

            <EditText
                android:id="@+id/pop_show_shangjia_price_ed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/shape_add_goods_edit_bg"
                android:padding="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pop_show_shangjia_confirm_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_btn_select"
                android:text="@string/zhijieshangjia"
                android:textColor="@color/app_gray" />

            <Button
                android:id="@+id/pop_show_shangjia_cancel_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/right_btn_select"
                android:text="@string/shangjiazhuanfa"
                android:textColor="@color/app_gray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>