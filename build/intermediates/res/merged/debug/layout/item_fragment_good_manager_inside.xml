<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/item_bg"
    android:paddingLeft="10dp"

    android:paddingTop="5dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_order_manage_good_icon"
            android:layout_width="@dimen/item_shop_purchase_height"
            android:layout_height="@dimen/item_shop_purchase_height"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_list_inside_layout_padding"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_order_manage_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopbus_item_log3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_order_manage_good_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textSize="@dimen/order_list_inside_price_size"
                android:textColor="@color/grey" />
            <TextView
                android:id="@+id/tv_order_manage_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/nullstr"
                android:textColor="@color/salmon"
                android:textStyle="bold"
                android:gravity="right"
                android:textSize="@dimen/order_list_inside_price_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_manage_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/order_list_inside_layout_padding" >

            <TextView
                android:id="@+id/tv_order_manage_good_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格："
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_list_inside_price_size" />

            <TextView
                android:id="@+id/tv_order_manage_content_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_list_inside_price_size" />
            <TextView
                android:id="@+id/tv_order_manage_good_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray"

                android:gravity="right"
                android:textSize="@dimen/order_list_inside_number_size" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >





        <TextView
            android:id="@+id/tv_order_namage_good_total_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:visibility="gone"
            android:textColor="@color/salmon"
            android:textSize="@dimen/order_list_inside_total_price_size" />
    </LinearLayout>

</LinearLayout>