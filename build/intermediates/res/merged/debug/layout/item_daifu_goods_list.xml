<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/item_bg"
        android:orientation="horizontal"
        android:paddingLeft="10dp"

        android:paddingRight="10dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_daifu_good_icon"
                android:layout_width="@dimen/item_shop_purchase_height"
                android:layout_height="@dimen/item_shop_purchase_height"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/order_detail_listview_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_daifu_goods_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopbus_item_log3" />

                <TextView
                    android:id="@+id/tv_daifu_good_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nullstr"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/order_detail_goods_total_price_lable_size" />


                <TextView
                    android:id="@+id/tv_daifu_good_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/nullstr"
                    android:textColor="@color/salmon"
                    android:textSize="@dimen/order_detail_goods_total_price_lable_size"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/order_detail_listview_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_daifu_good_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/daifu_good_standard"
                    android:textColor="@color/app_gray"
                    android:textSize="@dimen/order_detail_goods_total_price_lable_size" />

                <TextView
                    android:id="@+id/tv_daifu_content_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nullstr"
                    android:textColor="@color/app_gray"
                    android:textSize="@dimen/order_detail_goods_total_price_lable_size" />


                <TextView
                    android:id="@+id/tv_daifu_good_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/order_detail_listview_padding"
                    android:text="@string/nullstr"
                    android:textColor="@color/app_gray"
                    android:textSize="@dimen/order_detail_goods_total_price_lable_size" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/order_detail_listview_margin"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_daifu_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/order_detail_listview_margin"
                    android:text="@string/daifu_edit"
                    android:textColor="@color/app_fen" />




                    <TextView
                        android:id="@+id/tv_daifu_good_total_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="@string/nullstr"
                        android:textColor="@color/salmon"
                        android:textSize="@dimen/order_detail_goods_total_price_lable_size"

                        android:textStyle="bold" />





            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>