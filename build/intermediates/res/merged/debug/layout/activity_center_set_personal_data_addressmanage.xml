<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />
    
    <LinearLayout 
        android:id="@+id/center_address_manage_outlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <ListView
        android:id="@+id/lv_address_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:focusable="false"
        android:dividerHeight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusableInTouchMode="false"
        android:listSelector="#00000000"
        android:scrollbars="none" >
    </ListView>
    
    <Button 
        android:id="@+id/btn_add_new_consignee_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/build_two_dimension_code_btn_style_no_circular"
        android:text="@string/new_consignee_address"
      
        />
    </LinearLayout>
    
    <include 
        android:id="@+id/center_address_manage_nodata_lay"
        layout="@layout/commentview_nodata"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        />

</LinearLayout>