<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/center_address_manager_name_phone_top_buttom_margin"
        android:paddingBottom="@dimen/center_address_manager_name_phone_top_buttom_margin"
        android:layout_marginTop="@dimen/center_address_manager_name_phone_top_buttom_margin"
        android:background="@drawable/shape_shopmanger_circular_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/center_address_manager_name_phone_top_buttom_margin"
            android:layout_marginLeft="@dimen/center_address_manager_name_phone_left_right_margin"
            android:layout_marginRight="@dimen/center_address_manager_name_phone_left_right_margin"
            android:layout_marginTop="@dimen/center_address_manager_name_phone_top_buttom_margin" >

            <TextView
                android:id="@+id/tv_usr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/grey"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/comment_label_txtsize" />

            <TextView
                android:id="@+id/tv_usr_phone_numb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/comment_label_txtsize" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_delivery_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/center_address_manager_delivery_address_top_buttom_margin"
            android:layout_marginLeft="@dimen/center_address_manager_delivery_address_left_right_margin"
            android:layout_marginRight="@dimen/center_address_manager_delivery_address_left_right_margin"
            android:text="@string/delivery_address"
            android:textColor="@color/grey"
            android:textSize="@dimen/comment_label_txtsize" />

        <View style="@style/line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/center_address_manager_delivery_address_top_buttom_margin"
            android:layout_marginLeft="@dimen/center_address_manager_delivery_address_left_right_margin"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/center_address_manager_delivery_address_left_right_margin"
            android:layout_marginTop="@dimen/center_address_manager_delivery_address_top_buttom_margin" >

            <LinearLayout
                android:id="@+id/ll_select_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_quan_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/quan_select_1" />

                <TextView
                    android:id="@+id/tv_default_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_address_manager_default_margin"
                    android:text="@string/default_address"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/comment_label_txtsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                 android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_edit"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/comment_label_txtsize" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/center_address_manager_default_margin"
                    android:layout_marginRight="@dimen/center_address_manager_default_margin"
                    android:background="@color/app_gray" />

                <TextView
                    android:id="@+id/tv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_delete"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/comment_label_txtsize" >
                </TextView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>