<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:background="@color/item_bg"
    android:paddingLeft="10dp"

    android:paddingTop="5dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_purchese_detail_good_icon"
            android:layout_width="@dimen/item_shop_purchase_height"
            android:scaleType="fitXY"
            android:layout_height="@dimen/item_shop_purchase_height" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/order_detail_listview_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_purchese_detail_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/shopbus_item_log3" />

            <TextView
                android:id="@+id/tv_purchese_detail_good_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray" />


            <TextView
                android:id="@+id/tv_purchese_detail_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/nullstr"
                android:textColor="@color/app_fen"
                android:textStyle="bold"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_purchese_good_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="净含量："
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size"  />

            <TextView
                android:id="@+id/tv_purchese_content_value"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size"  />

            <TextView
                android:id="@+id/tv_purchese_detail_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size"
                android:textColor="@color/app_gray"
                android:text="@string/nullstr" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/order_detail_listview_margin" >




        </RelativeLayout>
    </LinearLayout>

</LinearLayout>