<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shap_corner"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/item_branddetail_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/brand_detail_brand_item_iv_height"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>


    <io.vtown.WeiTangApp.comment.view.DashedLineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"

        />

    <TextView
        android:id="@+id/item_branddetail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="2"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/grey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ui_5_dip"
        android:layout_marginBottom="@dimen/ui_5_dip"
        >

        <TextView
            android:id="@+id/item_branddetail_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ui_2_dip"
            android:textColor="@color/app_gray"
            android:textSize="@dimen/ui_12_dip"
            />

        <TextView
            android:id="@+id/item_branddetail_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/ui_10_dip"
            android:textColor="@color/app_gray"
            android:textSize="@dimen/ui_12_dip"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_branddetail_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/app_fen"/>

        <TextView
            android:id="@+id/item_branddetail_orig_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_gray"
            android:textSize="@dimen/ui_12_dip"
            />
    </LinearLayout>
</LinearLayout>