<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/order_detail_listview_padding" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/item_center_order_no_pay_detail_in_iv"
                android:layout_width="@dimen/item_shop_purchase_height"
                android:layout_height="@dimen/item_shop_purchase_height"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_center_order_no_pay_detail_in_name"
                android:layout_width="match_parent"
                android:textColor="@color/grey"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/error_network" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_center_order_no_pay_detail_in_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/order_detail_listview_padding"
                    android:paddingTop="@dimen/order_detail_listview_padding"
                    android:text="@string/nullstr"
                    android:textColor="@color/app_fen" />

                <TextView
                    android:id="@+id/item_center_order_no_pay_detail_in_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/grey"
                    android:text="@string/nullstr" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    
    <View 
        style="@style/line_left_right"
        />

</LinearLayout>