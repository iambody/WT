<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
android:background="@color/white"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp" >

            <TextView
                android:id="@+id/tv_center_order_no_pay_order_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/grey"
                android:textSize="@dimen/order_list_inside_price_size" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />



            <TextView
                android:id="@+id/fragment_center_order_no_pay_pay_to"
                style="@style/bt_textview"

                android:text="去付款" />

             <TextView
                android:id="@+id/fragment_center_order_no_pay_cancel_order"
                style="@style/bt_textview"
                android:layout_marginLeft="@dimen/order_list_button_margin"
                android:text="取消订单" />
        </LinearLayout>

        <View style="@style/line1" />

        <io.vtown.WeiTangApp.comment.view.custom.CompleteListView
            android:id="@+id/item_fragment_center_order_no_pay_outside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:divider="@null" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" >

            <TextView
                android:id="@+id/item_fragment_center_order_no_pay_allnum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:textSize="@dimen/order_list_good_number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需付款:"
                android:textColor="@color/slategrey"
                android:textSize="@dimen/order_list_inside_price_size" />

            <TextView
                android:id="@+id/item_fragment_center_order_no_pay_allmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/app_fen"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/order_list_total_money" />

            <TextView
                android:id="@+id/item_fragment_center_order_no_pay_postage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/nullstr"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grey"
                android:textSize="@dimen/order_list_poseage" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>