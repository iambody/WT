<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/app_bg"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/shape_integral_bg_white"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_integral_day"
                android:layout_width="wrap_content"

                android:textColor="@color/app_gray"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_integral_time"
                android:layout_width="wrap_content"

                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_gray"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_integral_bg_white"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_integral_content"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:maxLines="2"
                android:ellipsize="end"

                android:textSize="12sp"
                android:textColor="@color/gray"

                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_integral_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="11sp"
                android:textColor="@color/app_gray"

                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_integral_point_and_status"
            android:layout_width="@dimen/integral_point_width"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_integral_bg_fen"
            android:gravity="center"
            android:padding="8dp"
            android:layout_height="match_parent">
            <TextView
            android:id="@+id/tv_integral_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>