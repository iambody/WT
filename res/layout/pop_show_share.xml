<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="30dp"
              android:background="@drawable/shape_pop_gridview_txt_normal_bg"
              android:orientation="vertical"
               android:padding="@dimen/line_size1">


    <RelativeLayout
        android:id="@+id/show_share_to_friends"
       android:focusable="true"
        android:clickable="true"
        android:background="@drawable/select_show_share_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pop_show_center1"
            android:src="@drawable/share_wxpy"/>

        <ImageView
            android:id="@+id/pop_show_center1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/pop_show_center1"
            android:text="分享好友"
            />
    </RelativeLayout>

    <View
        style="@style/line"
        />

    <RelativeLayout
        android:id="@+id/show_share_to_weixin"
        style="@style/clickstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/pop_show_center2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pop_show_center2"
            android:src="@drawable/sharer_weixin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/pop_show_center2"
            android:text="分享朋友圈"
            />
    </RelativeLayout>

    <View
        style="@style/line"
        />

    <RelativeLayout
        android:id="@+id/show_share_to_show"
        style="@style/clickstyle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/pop_show_center3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pop_show_center3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_show_press"/>

        <TextView
            android:layout_toRightOf="@+id/pop_show_center3"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="show分享"
            />
    </RelativeLayout>

    <View
        style="@style/line"
        />

    <TextView
        android:id="@+id/show_share_cancel"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/select_show_share_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="14dp"
        android:text="取消"/>

</LinearLayout>
