<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_shopdetail_good_iv"
        android:layout_width="@dimen/item_goodsort_iv_height"
        android:layout_height="@dimen/item_goodsort_iv_height"
        android:layout_gravity="center_vertical"
        android:padding="6dp"
        android:scaleType="fitXY"
         />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_shopdetail_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            
            android:gravity="left"
            android:textColor="@color/gray"
            android:text="@string/nullstr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_shopdetail_good_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:text="@string/nullstr"
            android:textColor="@color/red" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_marginTop="2dp"
            android:background="@color/app_line"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>