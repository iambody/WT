<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/brand_number_edit_ed"
            style="@style/edit_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:inputType="number"
            android:textColor="@color/grey"
            android:textSize="@dimen/comment_label_txtsize" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size1"
            android:background="@color/app_fen" />
    </LinearLayout>

    <Button
        android:id="@+id/brand_number_edit_bt"
        style="@style/build_two_dimension_code_btn_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/queding"
        android:textSize="@dimen/comment_label_txtsize" />

</LinearLayout>