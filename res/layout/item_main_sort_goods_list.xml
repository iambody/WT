<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_corner"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_main_sort_goods_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zhuanqu_item_height"
        android:scaleType="fitCenter"/>

    <io.vtown.WeiTangApp.comment.view.DashedLineView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"

        />

    <TextView
        android:id="@+id/item_main_sort_goods_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="left"
        android:lines="1"
        android:paddingBottom="@dimen/line_size6"
        android:paddingLeft="@dimen/line_size6"
        android:paddingTop="@dimen/line_size6"
        android:textColor="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/ui_5_dip"
        android:paddingRight="@dimen/ui_5_dip">

        <TextView
            android:id="@+id/item_main_sort_goods_sale"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/app_gray"
            android:textSize="@dimen/ui_12_dip"/>

        <TextView
            android:id="@+id/item_main_sort_goods_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:lines="1"
            android:textColor="@color/app_gray"
            android:textSize="@dimen/ui_12_dip"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/line_size6"
        android:paddingLeft="@dimen/line_size6"
        android:paddingRight="@dimen/ui_5_dip">

        <TextView
            android:id="@+id/item_main_sort_goods_img_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/red"
            />

        <TextView
            android:id="@+id/item_main_sort_goods_img_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lines="1"

            android:textColor="@color/app_gray"
            android:textSize="@dimen/ui_12_dip"/>
    </LinearLayout>
</LinearLayout>