<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/shop_good_sou_hot_goods_icon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"

        android:src="@drawable/error_iv2" />

   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size1"
        android:src="@color/app_line" />-->

    <TextView
        android:id="@+id/shop_good_sou_hot_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingLeft="5dp"
        android:textColor="@color/grey"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/shop_good_sou_hot_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textColor="@color/app_fen"
        android:textSize="12sp"

        />

</LinearLayout>
