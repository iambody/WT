<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/item_bg"
        android:paddingLeft="10dp"

        android:paddingTop="5dp"
        android:paddingRight="10dp"
        >

        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/item_fragment_center_order_in_iv"
                android:layout_width="80dp"
                android:scaleType="fitXY"

                android:layout_height="80dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"

            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_fragment_center_order_in_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/order_list_inside_price_size"
                android:text="@string/error_network"
                android:textColor="@color/app_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_fragment_center_order_in_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.00"
                     android:textSize="@dimen/order_list_inside_price_size"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textColor="@color/salmon" />

                <TextView
                    android:id="@+id/item_fragment_center_order_in_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/order_list_inside_number_size"
                    android:text="*1"
                    android:gravity="right"
                    android:textColor="@color/app_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>