<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/good_show_select_share_ed"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:background="@drawable/shap_rect_no_circular_bg"
                android:gravity="left|top"
                android:hint="@string/szhuan_saying"
                android:padding="@dimen/line_size4"
                android:textColor="@color/gray"></EditText>


            <io.vtown.WeiTangApp.comment.view.custom.CompleteGridView
                android:id="@+id/good_show_select_gridview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:background="@drawable/shape_show_select_pic_bg"
                android:horizontalSpacing="3dp"
                android:numColumns="3"
                android:scrollbars="none"
                android:verticalSpacing="3dp"
                />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/good_show_select_share_bt"
        style="@style/bt_match"
        android:layout_margin="10dp"
        android:background="@drawable/select_fen_to_gray"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/show_share"
        android:textColor="@color/TextColorWhite"/>


</LinearLayout>
