<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/order_detail_listview_padding" >

        <TextView
            android:id="@+id/tv_center_order_no_pay_detail_seller_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nullstr"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="@dimen/order_list_inside_total_price_size" />

        <LinearLayout
            android:id="@+id/ll_center_my_order_no_pay_contact_seller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lianxikefu_nor_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="联系卖家"
                android:textColor="@color/grey"
                android:textSize="@dimen/order_list_inside_total_price_size" />
        </LinearLayout>
    </RelativeLayout>



    <io.vtown.WeiTangApp.comment.view.custom.CompleteListView
        android:id="@+id/item_fragment_center_order_no_pay_detail_outside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="3dp"
        android:divider="@color/white" />


    <LinearLayout
        android:id="@+id/ll_center_my_no_pay_order_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/ui_10_dip">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注留言："
            android:textColor="@color/grey"
            android:textSize="@dimen/order_list_good_number" />

        <TextView
            android:id="@+id/tv_center_my_no_pay_order_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textSize="@dimen/order_list_good_number" />


    </LinearLayout>

    <View
        android:id="@+id/no_pay_line"
        style="@style/line1"
        />
    
   
    

</LinearLayout>