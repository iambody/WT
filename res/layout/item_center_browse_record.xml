<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_center_browse_record_icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                 />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_center_browse_record_good_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopbus_item_log3"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:id="@+id/tv_center_browse_record_good_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nullstr" 
                    android:textColor="@color/gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal" android:visibility="invisible">

                <LinearLayout
                    android:id="@+id/ll_center_browse_record_rule1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shap_dai_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/orange"
                        android:text="代"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_center_browse_record_rule1"
                        android:layout_width="30dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:layout_height="wrap_content"
                        android:textColor="@drawable/orange"
                        android:text="100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_center_browse_record_rule2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shap_pi_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/blue"
                        android:text="批"
                        android:textColor="@color/white" />

                    <TextView
                       
                        android:id="@+id/tv_center_browse_record_rule2"
                        android:layout_width="30dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_center_browse_record_rule3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/shap_fan_bg"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/green"
                        
                        android:text="返"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_center_browse_record_rule3"
                        android:layout_width="30dp"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/green"
                        
                        android:text="100" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_center_browse_record_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_fen"
                android:textSize="16dp" />

           
        </LinearLayout>
    </LinearLayout>

</LinearLayout>