<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/shape_my_coupons_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ico_kaquan_nor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

<LinearLayout
    android:layout_width="0dp"
    android:orientation="vertical"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    android:layout_weight="1"
    android:padding="10dp"
    android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/tv_my_coupons_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="0dp"
                android:text="@string/nullstr"

                android:textColor="@color/app_fen"
                android:textSize="36dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"

                android:gravity="bottom"
                android:text="元"
                android:textColor="@color/app_fen"
                android:textSize="10dp" />
        </LinearLayout>

    <TextView
        android:id="@+id/tv_coupons_type"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textColor="@color/grey"
        android:textSize="12sp"
        android:layout_height="wrap_content" />

</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"

            >

            <io.vtown.WeiTangApp.comment.view.DashedLine

                android:layout_width="@dimen/line_size"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_coupons_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nullstr" />

                <TextView
                    android:id="@+id/tv_coupons_donation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_daifu_daifa_btn_bg"
                    android:padding="@dimen/order_list_txt_padding"
                    android:text="转赠"
                    android:textColor="@color/black"
                    android:textSize="@dimen/order_list_button_txt" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_my_coupons_validity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/center_my_conpons_my_coupons_validity_margin"
                android:text="@string/my_coupons_validity"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/center_my_conpons_my_coupons_validity_txt_size" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_banyuan_left" />


        <io.vtown.WeiTangApp.comment.view.DashedLineView

            android:layout_width="0dp"
            android:layout_height="@dimen/line_size"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_banyuan_right"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ui_8_dip"
        android:paddingLeft="@dimen/ui_10_dip"
        android:paddingRight="@dimen/ui_10_dip"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/tv_apply_shops"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/grey"
             />

        <TextView
            android:id="@+id/tv_look_all_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/grey"
            android:paddingLeft="20dp"
            android:text="查看可用店铺 >>" />

    </LinearLayout>

</LinearLayout>