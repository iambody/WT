<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shop_good_sou_good_icon"
               android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:layout_width="@dimen/item_shop_purchase_height"
                android:layout_height="@dimen/item_shop_purchase_height" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shop_good_sou_good_is_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/shopbus_item_log3" />

                <TextView
                    android:id="@+id/shop_good_sou_good_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nullstr"
                    android:textColor="@color/gray" />
            </LinearLayout>


            <TextView
                android:id="@+id/shop_good_sou_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/app_fen"
                android:textSize="16dp" />


        </LinearLayout>
    </LinearLayout>

    <View

        style="@style/line" />

</LinearLayout>