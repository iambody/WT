<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/order_list_inside_top_bottom_padding"
    android:paddingLeft="@dimen/order_list_inside_left_right_padding"
    android:paddingRight="@dimen/order_list_inside_left_right_padding"
    android:paddingTop="@dimen/order_list_inside_top_bottom_padding" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_order_manage_good_icon"
            android:layout_width="@dimen/item_shop_purchase_height"
            android:layout_height="@dimen/item_shop_purchase_height"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/order_list_inside_layout_padding"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_order_manage_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopbus_item_log3"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_order_manage_good_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_order_manage_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/order_list_inside_layout_padding" >

            <TextView
                android:id="@+id/tv_order_manage_good_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="规格："
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_list_inside_standard_lable_size" />

            <TextView
                android:id="@+id/tv_order_manage_content_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_list_inside_standard_lable_size" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/order_list_inside_layout_padding"
            android:paddingTop="@dimen/order_list_inside_layout_padding" >

            <TextView
                android:id="@+id/tv_order_manage_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/nullstr"
                android:textColor="@color/salmon"
                android:textSize="@dimen/order_list_inside_price_size" />

            <TextView
                android:id="@+id/tv_order_manage_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/tv_order_manage_good_price"
                android:text="@string/nullstr"
                android:textColor="@color/tan"
                android:textSize="@dimen/order_list_inside_number_size" />

            <TextView
                android:id="@+id/tv_order_namage_good_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:textColor="@color/salmon"
                android:textSize="@dimen/order_list_inside_total_price_size" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>