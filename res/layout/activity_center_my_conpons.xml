<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:id="@+id/center_my_coupons_outlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <ListView
            android:id="@+id/lv_my_conpons_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/center_my_conpons_listview_magrin"
            android:layout_marginRight="@dimen/center_my_conpons_listview_magrin"
            android:cacheColorHint="#00000000"
            android:divider="@color/app_bg"
            android:dividerHeight="@dimen/ui_10_dip"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:listSelector="#00000000"
            android:scrollbars="none" />


        <!--<include
            android:id="@+id/center_my_coupons_nodata_lay"
            layout="@layout/commentview_nodata"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />-->


    </LinearLayout>


</LinearLayout>