<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/order_detail_listview_padding"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_order_detail_good_icon"
             android:layout_width="@dimen/item_shop_purchase_height"
            android:layout_height="@dimen/item_shop_purchase_height"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/order_detail_listview_margin"
        android:orientation="vertical" >
        
        <LinearLayout 
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            
            <ImageView 
                android:id="@+id/iv_modify_order_goods_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopbus_item_log3"
                
                />
              <TextView
            android:id="@+id/tv_order_detail_good_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:text="@string/nullstr" />
            
        </LinearLayout>

      

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_good_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="净含量："
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_standard_lable_size" />

            <TextView
                android:id="@+id/tv_content_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_standard_size" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/order_detail_listview_margin" >

            <TextView
                android:id="@+id/tv_order_detail_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/nullstr"
                android:textColor="@color/app_fen"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />

            <TextView
                android:id="@+id/tv_order_detail_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                
                android:textColor="@color/grey"
                android:text="@string/nullstr" />
        </RelativeLayout>

     
    </LinearLayout>

</LinearLayout>