<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/item_bg"
        android:paddingLeft="10dp"

        android:paddingTop="5dp"
        android:paddingRight="10dp"
         >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/item_fragment_center_order_no_pay_in_iv"
                android:layout_width="@dimen/item_shop_purchase_height"
                android:scaleType="fitXY"
                android:layout_height="@dimen/item_shop_purchase_height" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_fragment_center_order_no_pay_in_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/order_list_inside_price_size"
                android:text="@string/error_network"
                android:textColor="@color/grey" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/item_fragment_center_order_no_pay_in_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/order_list_inside_price_size"
                    android:text="123"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textColor="@color/salmon" />

                <TextView
                    android:id="@+id/item_fragment_center_order_no_pay_in_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:gravity="right"
                    android:layout_marginTop="5dp"
                    android:textSize="@dimen/order_list_inside_number_size"
                    android:textColor="@color/app_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>