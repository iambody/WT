<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp"
              android:background="@drawable/shape_shopmanger_circular_bg"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:paddingLeft="5dp"
              android:paddingTop="10dp">

    <ImageView
        android:id="@+id/item_myin_new_iv"
        android:layout_width="@dimen/item_my_new_head_iv_hright"
        android:layout_height="@dimen/item_my_new_head_iv_hright"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/item_my_new_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:gravity="left"
            android:text="@string/nullstr"
            android:textColor="@color/black"
            android:textStyle="bold"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="4dp"/>
        <TextView
            android:id="@+id/item_my_new_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="clip_vertical"
            android:lines="1"
            android:text="@string/nullstr"
            android:textColor="@color/app_gray"/>

        <TextView
            android:id="@+id/item_my_new_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="5dp"
            android:textColor="@color/app_gray"/>

    </LinearLayout>

</LinearLayout>