<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/ui_10_dip"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/comment_newshow_item_head"
        android:layout_width="@dimen/new_show_item_headwidth"
        android:layout_height="@dimen/new_show_item_headwidth"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:scaleType="fitCenter"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_10_dip"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="@dimen/ui_10_dip">

        <TextView
            android:id="@+id/comment_newshow_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_fen"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/comment_newshow_item_inf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/line_size5"
            android:textColor="@color/app_black"
            />
    </LinearLayout>
</LinearLayout>
