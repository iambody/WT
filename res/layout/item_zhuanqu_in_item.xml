<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shap_corner"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/item_zhuanqu_in_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zhuanqu_item_height"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size1"
        android:src="@color/app_line"/>

    <TextView
        android:id="@+id/item_zhuanqu_in_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:lines="2"
        android:textColor="@color/gray"/>

    <TextView
        android:id="@+id/item_zhuanqu_in_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/red"

        />

</LinearLayout>