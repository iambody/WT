<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="30dp"
              android:background="@color/transparent"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dialog_show_share_cancel"
        android:background="@drawable/shap_corner"
        android:orientation="vertical"
        android:padding="@dimen/line_size1">

        <RelativeLayout
            android:id="@+id/ll_share_2_wxchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pop_show_center1"
                android:src="@drawable/share_wxpy"/>

            <ImageView
                android:id="@+id/pop_show_center1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pop_show_center1"
                android:text="微信好友"/>


        </RelativeLayout>

        <View style="@style/line1"/>

        <RelativeLayout
            android:id="@+id/ll_share_2_wxfriends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pop_show_center2"
                android:src="@drawable/sharer_weixin"/>

            <ImageView
                android:id="@+id/pop_show_center2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pop_show_center2"
                android:text="朋友圈"/>


        </RelativeLayout>

        <View style="@style/line1"/>

        <RelativeLayout
            android:id="@+id/ll_share_2_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pop_show_center3"
                android:src="@drawable/share_qq"/>

            <ImageView
                android:id="@+id/pop_show_center3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pop_show_center3"
                android:text="QQ好友"/>


        </RelativeLayout>

        <View style="@style/line1"/>

        <RelativeLayout
            android:id="@+id/ll_share_2_qzone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pop_show_center4"
                android:src="@drawable/share_qqkj"/>

            <ImageView
                android:id="@+id/pop_show_center4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pop_show_center4"
                android:text="QQ空间"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_share_2_sinawb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/pop_show_center5"
                android:src="@drawable/pic_weibo_nor"/>

            <ImageView
                android:id="@+id/pop_show_center5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/pop_show_center5"
                android:text="新浪微博"/>


        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_10_dip"
        android:src="@color/transparent"/>

    <TextView
        android:id="@+id/dialog_show_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/select_show_share_down_up"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="14dp"
        android:text="取消"
        android:layout_marginBottom="@dimen/ui_10_dip"
        />


</LinearLayout>