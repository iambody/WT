<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/shap_corner"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_share_2_wxchat"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/share_wxpy"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="微信好友"
            android:textSize="11sp"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_2_wxfriends"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/sharer_weixin"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="朋友圈"
            android:textSize="11sp"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_2_qq"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/share_qq"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="QQ好友"
            android:textSize="11sp"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_2_qzone"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/share_qqkj"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="QQ空间"
            android:textSize="11sp"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_share_2_sinawb"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/share_wxpy"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="新浪微博"
            android:textSize="11sp"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content" />


    </LinearLayout>




</LinearLayout>