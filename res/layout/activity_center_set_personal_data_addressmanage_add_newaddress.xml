<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >
    
    <include layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/center_address_manager_add_address_top_buttom_margin"
                android:layout_marginLeft="@dimen/center_address_manager_add_address_left_right_margin"
                android:layout_marginRight="@dimen/center_address_manager_add_address_left_right_margin"
                android:layout_marginTop="@dimen/center_address_manager_add_address_top_buttom_margin"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_consignee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/comment_label_txtsize"
                    android:text="收  货  人" />

                <EditText
                    android:id="@+id/et_consignee_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/center_address_manager_add_address_edittext_margin_left"
                    android:background="@null"
                    android:gravity="left"
                    android:layout_marginRight="@dimen/center_address_manager_add_address_edittext_margin_left"
                    android:textColor="@color/app_gray"
                    android:textSize="@dimen/comment_label_txtsize"
                    android:hint="@string/input_shouhuoren_mingzi"/>
            </LinearLayout>

            <View
                style="@style/line_left"/>

            <RelativeLayout
                android:id="@+id/rl_contact_phone_numb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/center_address_manager_add_address_top_buttom_margin"
                android:layout_marginLeft="@dimen/center_address_manager_add_address_left_right_margin"
                android:layout_marginRight="@dimen/center_address_manager_add_address_left_right_margin"
                android:layout_marginTop="@dimen/center_address_manager_add_address_top_buttom_margin"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/tv_contact_phone_numb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/comment_label_txtsize"
                    android:textColor="@color/grey"
                    android:text="@string/contact_phone_numb" />
                
                <EditText
                    android:id="@+id/et_contact_phone_numb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_gray"
                    android:textSize="@dimen/comment_label_txtsize"
                    android:gravity="left"

                    android:layout_marginRight="@dimen/center_address_manager_add_address_edittext_margin_left"
                    android:layout_toRightOf="@id/tv_contact_phone_numb"
                    android:layout_marginLeft="@dimen/center_address_manager_add_address_edittext_margin_left"
                    android:background="@null"
                    android:hint="@string/putin_shouhuo_name"/>

                <ImageView
                    android:id="@+id/iv_look_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:src="@drawable/select_add_rule_bg" />
            </RelativeLayout>

            <View
                style="@style/line_left"/>

            <include
                android:id="@+id/location"
                layout="@layout/commentview_txtarrow_content_at_left" />

            <View
                style="@style/line_left"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/center_address_manager_add_address_top_buttom_margin"
                android:layout_marginLeft="@dimen/center_address_manager_add_address_left_right_margin"
                android:layout_marginRight="@dimen/center_address_manager_add_address_left_right_margin"
                android:layout_marginTop="@dimen/center_address_manager_add_address_top_buttom_margin"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/comment_label_txtsize"
                    android:textColor="@color/grey"
                    android:text="@string/detail_address" />

                <EditText
                    android:id="@+id/et_detail_address_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/center_address_manager_add_address_edittext_height"
                    android:layout_marginLeft="@dimen/center_address_manager_add_address_edittext_margin_left"
                    android:textColor="@color/app_gray"
                    android:textSize="@dimen/comment_label_txtsize"
                    android:background="@null"
                    android:layout_marginRight="@dimen/center_address_manager_add_address_edittext_margin_left"
                    android:gravity="left"
                    android:textColorHint="@color/app_gray"
                    android:hint="@string/enter_detail_address" />
            </LinearLayout>
            <View
                style="@style/line_left"/>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/build_two_dimension_code_btn_style"
                android:textSize="@dimen/comment_label_txtsize"
                android:text="@string/txt_save"
                android:layout_margin="@dimen/center_address_manager_add_address_save_buttom_margin"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>