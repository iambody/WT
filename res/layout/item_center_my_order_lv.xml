<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/item_bg"
    android:orientation="horizontal"
    android:paddingLeft="10dp"

    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_center_my_order_detail_good_icon"
            android:layout_width="@dimen/item_shop_purchase_height"
            android:layout_height="@dimen/item_shop_purchase_height"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="@dimen/order_detail_listview_margin"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >


            <TextView
                android:id="@+id/tv_center_my_order_detail_good_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/nullstr"
                android:textColor="@color/grey"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_center_my_order_good_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="净含量："
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />

            <TextView
                android:id="@+id/tv_center_my_order_content_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_center_my_order_detail_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/nullstr"
                android:textColor="@color/app_fen"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_center_my_order_detail_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nullstr"
                android:textColor="@color/app_gray"
                android:textSize="@dimen/order_detail_listview_goods_total_price_size" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>