<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <include
        layout="@layout/commenview_newshow_item_head"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/new_show_item_headwidth1"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/item_newshow_onepic_image"
        android:layout_width="@dimen/show_oneiv_height"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />
    </LinearLayout>
    <include layout="@layout/commenview_newshow_item_foot"/>
</LinearLayout>
