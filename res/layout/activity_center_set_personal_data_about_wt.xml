<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_app_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_app_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/grey"
                android:textSize="@dimen/comment_label_txtsize"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@color/app_bg"/>

        <include
            android:id="@+id/new_version_update"
            layout="@layout/commentview_txtarrow"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_10_dip"
            android:src="@color/app_bg"/>

        <include
            android:id="@+id/function_introduce"
            layout="@layout/commentview_txtarrow"/>

         <View style="@style/line_left" />


        <include
            android:id="@+id/opinion_dengjiguize"
            layout="@layout/commentview_txtarrow"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_10_dip"
            android:src="@color/app_bg"/>
        <include
            android:id="@+id/opinion_abouus"
            layout="@layout/commentview_txtarrow"/>

        <View style="@style/line_left"/>
        <include
            android:id="@+id/opinion_feedback"
            layout="@layout/commentview_txtarrow"/>

        <View style="@style/line_left"/>

        <include
            android:id="@+id/contact_service"
            layout="@layout/commentview_txtarrow"/>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


</LinearLayout>