<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/app_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/app_bg"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@drawable/shape_integral_bg_white"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_return_day"
                    android:layout_width="wrap_content"
                    android:text="28日"
                    android:textColor="@color/app_gray"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_return_time"
                    android:layout_width="wrap_content"
                    android:text="10：34"
                    android:textSize="11sp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/app_gray"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_return_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="成功在微糖购买商品，恭喜您获得1000积分"
                android:maxLines="2"
                android:ellipsize="end"
                android:background="@drawable/shape_integral_bg_white"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:padding="10dp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_return_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_integral_bg_fen"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="+100"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>