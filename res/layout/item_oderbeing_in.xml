<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="2dp" 
    android:background="@color/app_bg">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="5dp"
        android:src="@drawable/quan_select_2"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="@dimen/titlebarheingh1"
        android:layout_height="@dimen/titlebarheingh1" >

        <ImageView
            android:id="@+id/item_oderbeing_in_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/testiv" />

        <ImageView
            android:id="@+id/item_oderbeing_in_log_tag"
            android:layout_width="@dimen/center_comment_iv_height"
            android:layout_height="@dimen/center_comment_iv_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/shopbus_item_in_shiku" />
    </RelativeLayout>

    <!-- 右边的 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <!-- 上边 -->

        <TextView
            android:id="@+id/item_oderbeing_in_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             
            android:textStyle="bold" />
        <!-- 中间 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/shopbus_guige"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/item_oderbeing_in_guige"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <!-- 最下边 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_oderbeing_in_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="left"
                android:text="￥342"
                android:textColor="@color/app_fen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_oderbeing_in_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*3" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>